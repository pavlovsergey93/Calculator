<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButton">
        <item name="android:textColor">@color/maroon</item>
        <item name="android:textSize">@dimen/number_text_size</item>
        <item name="backgroundTint">@color/orange_80</item>
        <item name="layout_constraintVertical_weight">@integer/weight_1</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>
    <style name="OperationButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/operation_text_size_big</item>
        <item name="backgroundTint">@color/maroon</item>
        <item name="layout_constraintVertical_weight">@integer/weight_1</item>
        <item name="cornerRadius">@dimen/radius</item>
    </style>
    <style name="OperationButton2" parent="OperationButton">
        <item name="android:textSize">@dimen/operation_text_size_little</item>
    </style>
    <style name="OperationButton3" parent="OperationButton">
        <item name="android:textSize">@dimen/operation_text_size_very_big</item>
    </style>
    <style name="TextViewResult">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:background">@color/orange_50</item>
        <item name="android:gravity">bottom|end</item>
        <item name="layout_constraintVertical_weight">@integer/weight_1</item>
    </style>
    <style name="TextViewHistory" parent="TextViewResult">
        <item name="android:textSize">@dimen/history_text_size</item>
        <item name="android:background"></item>
    </style>
</resources>